{% extends 'base.html.twig' %}

{% block title %}BlogPost{% endblock %}

{% block body %}
<h1>BlogPost</h1>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Publish at</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th colspan="5">Need to be processed</th>
        </tr>
        {% for blogPost in blogPosts if not blogPost.isProcessed %}
            <tr>
                <td>{{ blogPost.title }}</td>
                <td>{{ blogPost.content}}</td>
                <td>{{ blogPost.PublishAt|date('Y-m-d H:i:s') }}</td>
                <td><a href="{{ path('contact_show', {'id': blogPost.id}) }}" class="btn btn-primary">View BlogPost request</a></td>
            </tr>
        {% endfor %}
        <tr>
            <th colspan="5">Already processed</th>
        </tr>
        {% for blogPost in blogPosts if blogPost.isProcessed %}
            <tr>
                <td>{{ blogPost.title }}</td>
                <td>{{ blogPost.content }}</td>
                <td>{{ blogPost.publishAt|date('Y-m-d H:i:s') }}</td>
                <td><a href="{{ path('blogPost_show', {'id': blogPost.id}) }}" class="btn btn-primary">View BlogPost request</a></td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock body %}
