{% extends 'base.html.twig' %}

{% block title %}BlogPost{% endblock %}

{% block body %}
<h1>
    Contact details
    {% if blogPost.isProcessed %}
        <span class="label label-success">Processed!</span>
    {% else %}
        <span class="label label-warning">Need to be processed!</span>
    {% endif %}
</h1>
<div>
    <h2>From</h2>
    <div>{{ blogPost.name }} ({{ blogPost.email }})</div>

    <h2>Sent at</h2>
    <div>{{ blogPost.sentAt|date('Y-m-d H:s:i') }}</div>

    <h2>Subject</h2>
    <div>{{ blogPost.subject }}</div>

    <h2>Message</h2>
    <div>{{ blogPost.message }}</div>

    {% if not blogPost.isProcessed %}
        <h2>Actions</h2>
        <div><a href="{{ path('blogPost_mark_as_processed', {'id': blogPost.id}) }}" class="btn btn-success">Mark as Processed!</a></div>
    {% endif %}
</div>
{% endblock body %}
